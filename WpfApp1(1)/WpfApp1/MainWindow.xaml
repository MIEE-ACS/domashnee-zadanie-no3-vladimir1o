<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Подсчёт гласных и согласных букв" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txt1" HorizontalAlignment="Left" Margin="28,24,0,0" Text="Введите текст в поле ниже:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Width="327"/>
        <TextBox x:Name="mainfield" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="744" Height="215" FontSize="15" TextChanged="mainfield_TextChanged"/>
        <TextBlock x:Name="result1" HorizontalAlignment="Left" Margin="28,324,0,0" Text="Количество гласных: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="372"/>
        <TextBlock x:Name="result2" HorizontalAlignment="Left" Margin="28,364,0,0" Text="Количество согласных: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="372"/>

    </Grid>
</Window>
